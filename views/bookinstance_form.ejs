<h1><%= title %></h1>
<form method="POST" action="">
    <div class="form-group">
        <label for="book">Book: </label>
        <select id="book" class="form-control" type="select" placeholder="Select book" name="book" required="true">
            <% book_list.forEach(function(book){ %>
                <% if (bookinstance){ %>
                    <option value="<%=book._id%>" selected="<%=(bookinstance.book.toString()==book._id.toString()) ? 'selected' : false%>">
                        <%=book.title%>
                    </option>
                <% } else{ %>
                    <option value="<%=book._id%>">
                        <%=book.title%>
                    </option>
                <% } %>
            <% }); %>
        </select>
    </div>
    <div class="form-group">
        <label for="imprint">Imprint:</label>
        <input id="imprint" type="text" placeholder="Publisher and date information" name="imprint" required="true" value="<%=bookinstance ? bookinstance.imprint : ''%>" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="due_back">Date when book available:</label>
        <input id="due_back" type="date" name="due_back" value="<%=bookinstance ? bookinstance.due_back : ''%>" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="status">Status:</label>
        <select id="status" type="select" placeholder="Select status" name="status" required="true" class="form-control">
            <option value="Maintenance">Maintenance</option>
            <option value="Available">Available</option>
            <option value="Loaned">Loaned</option>
            <option value="Reserved">Reserved</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br>
<% if(errors){ %>
<ul>
    <% errors.forEach(function(error){ %>
    <li><span class="text-danger"><%=error.msg%></span></li>
    <% }); %>
</ul>
<% } %>